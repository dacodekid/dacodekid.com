{
  "type": "module",
  "scripts": {
    "clean": "rm -fr .vitepress/{cache,dist}",
    "format": "prettier --write $npm_package_config_prettier_extn",
    "build": "vitepress build",
    "preview": "vitepress preview",
    "watch:format": "onchange $npm_package_config_prettier_extn -- prettier --write {{changed}}",
    "watch:dev": "vitepress dev --host",
    "start-with-format": "npm-run-all --serial format --parallel watch:**",
    "start": "npm-run-all --serial watch:dev",
    "deploy": "gh-pages -d .vitepress/dist",
    "release": "npm-run-all --serial clean build deploy",
    "test": "vitest",
    "test:cov": "vitest --coverage",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@types/node": "^20.10.1",
    "@vitest/coverage-v8": "^0.34.6",
    "canvas-confetti": "^1.9.2",
    "chart.js": "^4.4.0",
    "gh-pages": "^6.1.0",
    "isomorphic-dompurify": "^1.10.0",
    "markdown-it": "^13.0.2",
    "markdown-it-mark": "^3.0.1",
    "markdown-it-mathjax3": "^4.3.2",
    "markdown-it-multimd-table": "^4.2.3",
    "markdown-it-plantuml": "^1.4.1",
    "markdown-it-sub": "^1.0.0",
    "markdown-it-sup": "^1.0.0",
    "mermaid": "^10.6.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "prettier": "^3.1.0",
    "vitepress": "^1.0.0-rc.31",
    "vitest": "^0.34.6",
    "vue": "^3.3.9"
  }
}
